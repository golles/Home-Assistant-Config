{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run prettier",
      "type": "shell",
      "command": "prettier --check ."
    },
    {
      "label": "Run prettier:fix",
      "type": "shell",
      "command": "prettier --write ."
    },
    {
      "label": "Run yamllint",
      "type": "shell",
      "command": "yamllint ."
    },
    {
      "label": "Check config (Dev container)",
      "type": "shell",
      "command": "./.devcontainer/scripts/check_config"
    }
  ]
}
